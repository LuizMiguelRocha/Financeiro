<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Financeiro.MainPage"
             Shell.NavBarIsVisible="false">

    <StackLayout 
                 BackgroundColor="#5A6B7D"
                 Padding="20">

        <Label Text="Crow"
               FontAttributes="Bold"
               FontSize="Large"
               HorizontalOptions="Center"
               TextColor="Black" />

        <Label Text="Finança em dia"
               FontAttributes="Bold"
               FontSize="Medium"
               HorizontalOptions="Center"
               TextColor="Black"
               Margin="0,20,0,0" />

        <Label Text="O software para de ajudar no seu financeiro"
               FontSize="Small"
               HorizontalOptions="Center"
               TextColor="Black"
               Margin="0,10,0,20" />

        <Button Text="Começar"
                Clicked="ComeçarButton"
                BackgroundColor="#D3D3D3"
                TextColor="Black"
                HorizontalOptions="Center"
                Padding="10,5"
                CornerRadius="10" />

    </StackLayout>
</ContentPage>
