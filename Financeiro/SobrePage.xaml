<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Financeiro.SobrePage"
             BackgroundColor="#657b95">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Lateral -->
        <StackLayout Grid.Column="0" BackgroundColor="#9fb8d2">
            <Label Text="☰" FontSize="Large" VerticalOptions="Start" HorizontalOptions="Center"/>
        </StackLayout>

        <!-- Conteúdo da Página -->
        <StackLayout Grid.Column="1" Padding="20">
            <Label Text="Sobre" FontSize="24" HorizontalOptions="Center" TextColor="Black"/>
            <Label Text="Esse software foi criado com o objetivo de ajudar você com as suas contas a pagar e a receber caso seja o o seu objetivo" 
                   FontSize="16" TextColor="Black" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>
</ContentPage>
